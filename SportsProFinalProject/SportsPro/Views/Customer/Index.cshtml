@*
    Customer
*@




@model List<CustomerModel>


@{
    ViewData["Title"] = "Customer Manager";
}



<h1> Customer Manager </h1>





<table class="table  table-responsive   table-striped  border  border-secondary   ">


    <thead class="">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>City</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    @foreach (var customer in Model)
    {

        <tr>
            <td>@customer.CustomerFirstName</td>
            <td>@customer.CustomerLastName</td>
            <td>@customer.Email</td>
            <td>@customer.City</td>


            <td>
                <a asp-controller="Customer" asp-action="EditCustomer" asp-route-id="@customer.CustomerModelId" asp-route-slug="@customer.Slug" class="btn btn-outline-primary">Edit</a>
            </td>
            <td>
                <a asp-controller="Customer" asp-action="DeleteCustomer" asp-route-id="@customer.CustomerModelId" asp-route-slug="@customer.Slug" class="btn btn-outline-danger">Delete</a>
            </td>
        </tr>
    }


</table>


<div>
    <a asp-controller="Customer" asp-action="Add" class="btn btn-outline-primary">Add New Customer</a>
</div>