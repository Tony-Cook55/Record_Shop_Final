@*
    Delete Customer
*@





@model CustomerModel
@{
    ViewBag.Title = $"{ViewBag.Action}";
}




<h1 class="my-4">Delete Customer</h1>

<p class="my-4">Do You Really Want To Delete <span class="fw-bold">@Model.CustomerFirstName @Model.CustomerLastName ?</span></p>


<form asp-action="DeleteCustomer" method="post">
    @* This Customer id is being sent back to the controller *@
    <input type="hidden" asp-for="CustomerModelId" />

    <button type="submit" class="btn btn-dark">Yes</button>
    <a asp-controller="Customer" asp-action="Index" class="btn btn-dark">No</a>
</form>