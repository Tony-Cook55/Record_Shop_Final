@*
    Edit Customer
*@
@{
}




@model CustomerModel

@{
    ViewBag.Title = $"{ViewBag.Action}";
}


<h1>@ViewBag.Action</h1>





<form asp-action="EditCustomer" method="post">

    @* All Error Messages *@
    @*     <div asp-validation-summary="All" class="text-danger"></div> *@



    @* FIRST NAME *@
    <div class="mb-3">
        <label asp-for="CustomerFirstName" class="form-label">First Name</label>
        <input asp-for="CustomerFirstName" class="form-control" />

        <span class="text-danger" asp-validation-for="CustomerFirstName"></span> @* Error Message *@

    </div>
    @* FIRST NAME *@


    @* LAST NAME *@
    <div class="mb-3">
        <label asp-for="CustomerLastName" class="form-label">Last Name</label>
        <input asp-for="CustomerLastName" class="form-control" />

        <span class="text-danger" asp-validation-for="CustomerLastName"></span> @* Error Message *@
    </div>
    @* LAST NAME *@



    @* ADDRESS *@
    <div class="mb-3">
        <label asp-for="Address" class="form-label">Address</label>
        <input asp-for="Address" class="form-control" />

        <span class="text-danger" asp-validation-for="Address"></span> @* Error Message *@
    </div>
    @* ADDRESS *@



    @* CITY *@
    <div class="mb-3">
        <label asp-for="City" class="form-label">City</label>
        <input asp-for="City" class="form-control" />

        <span class="text-danger" asp-validation-for="City"></span> @* Error Message *@
    </div>
    @* CITY *@



    @* STATE *@
    <div class="mb-3">
        <label asp-for="State" class="form-label">State</label>
        <input asp-for="State" class="form-control" />

        <span class="text-danger" asp-validation-for="State"></span> @* Error Message *@
    </div>
    @* STATE *@



    @* POSTAL CODE *@
    <div class="mb-3">
        <label asp-for="PostalCode" class="form-label">Postal Code</label>
        <input asp-for="PostalCode" class="form-control" maxlength="9"  min="0" placeholder="00000"/>

        <span class="text-danger" asp-validation-for="PostalCode"></span> @* Error Message *@
    </div>
    @*  POSTAL CODE *@



    @* COUNTRY *@
    <div class="mb-3">
        <label asp-for="CountryModelId" class="form-label">Country</label>

        <select asp-for="CountryModelId" class="form-control">
            <option value="">Select a Country</option>
            @foreach (var country in ViewBag.Countries)
            {
                <option value="@country.CountryModelId">@country.CountryName</option>
            }
        </select>

        <span class="text-danger" asp-validation-for="CountryModelId"></span> @* Error Message *@

    </div>
    @* COUNTRY *@



    @* EMAIL *@
    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" type="text" placeholder="testemail@gmail.com"/> @* type="date" *@

        <span class="text-danger" asp-validation-for="Email"></span> @* Error Message *@
    </div>
    @* EMAIL *@



    @* PHONE NUMBER *@
    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" placeholder="xxx-xxx-xxxx" />

        <span class="text-danger" asp-validation-for="PhoneNumber"></span> @* Error Message *@
    </div>
    @* PHONE NUMBER *@




    <input type="hidden" asp-for="CustomerModelId" />
    <button type="submit" class="btn btn-primary">Save</button>

    <a asp-controller="Customer" asp-action="Index" class="btn btn-secondary">Cancel</a>





</form>