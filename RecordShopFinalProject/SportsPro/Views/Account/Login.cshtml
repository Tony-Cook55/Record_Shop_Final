<div class="container  text-center">


    <div class="">
        <form method="post" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" class="login_form">

            @* PAGE HEADER *@
            <h1 class="page_header_text   text_shadow_pop_top   text-center">
                Login
            </h1>
            @* PAGE HEADER *@


            @* Invalid Username or Password Error *@
            <div class="add-edit_error_message   login_error_message" asp-validation-summary="ModelOnly"></div>
            @* Invalid Username or Password Error *@



            @*    SHOWS ALL ERRORS FOR MODEL
            <div class="add-edit_error_message login_error_message">
                @if (ViewData.ModelState.ErrorCount > 0)
                {
                    <div class="error">
                        <p>Please correct the following errors:</p>
                        @foreach (var key in ViewData.ModelState.Keys)
                        {
                            foreach (var error in ViewData.ModelState[key].Errors)
                            {
                                <p>@error.ErrorMessage</p>
                            }
                        }
                    </div>
                }
            </div>
            *@


            @* USERNAME *@
            <div class="add-edit_input_div">
                <input asp-for="UserName" class="add-edit_input   form-control" placeholder="Username" />
                <label asp-for="UserName" class="add-edit_input_label">Username</label>
            </div>
            <div class="add-edit_error_div">
                <span class="add-edit_error_message" asp-validation-for="UserName"></span> @* Error Message *@
            </div>
            @* USERNAME *@

            @* PASSWORD *@
            <div class="add-edit_input_div">
                <input asp-for="Password" type="password" class="add-edit_input   form-control" placeholder="Password" />
                <label asp-for="Password" class="add-edit_input_label">Password</label>
            </div>
            <div class="add-edit_error_div">
                <span class="add-edit_error_message" asp-validation-for="Password"></span> @* Error Message *@
            </div>
            @* PASSWORD *@


            @* REMEBER ME CHECKBOX *@
            <div class="remember_me_div">
                <div class="">
                    <input id="remember_label_ID" type="checkbox" title="Remember Me" asp-for="RememberMe" class="remember_me_checkbox" />
                    <label for="remember_label_ID" class="remember_me_label">Remember Me</label>
                </div>
            </div>
            @* REMEBER ME CHECKBOX *@



            @* LOGIN BUTTON *@
            <div class="register-login_button_div">
                <button type="submit" class="pushable text-center  m-3">
                    <span class="btn    pushable">
                        <span class="shadow"></span>
                        <span class="edge"></span>
                        <span class="front  front_save_button_color">
                            Login
                        </span>
                    </span>
                </button>
            </div>
            @* LOGIN BUTTON *@


            @* REGISTER AN ACCOUNT *@
            <div class="register-login_account_link_div">
                <a asp-action="Register" class="register-login_account_link">Register An Account Here Instead</a>
            </div>
            @* REGISTER AN ACCOUNT *@

        </form>
    </div>
</div>