
@model ChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
}



<h1>Change Password</h1>


<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="ChangePassword" method="post">
    <div class="row mb-2">
        <label class="col-form-label col-md-2">UserName:</label>
        <div class="col-md-4">
            <input asp-for="Username" class="form-control"  />
        </div>

        <div class="col">
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-2">
        <label class="col-form-label col-md-2">Old Password:</label>
        <div class="col-md-4">
            <input asp-for="OldPassword" class="form-control"  />
        </div>

        <div class="col">
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>
    </div>


    <div class="row mb-2">
        <label class="col-form-label col-md-2">New Password:</label>
        <div class="col-md-4">
            <input asp-for="NewPassword" class="form-control"  />
        </div>

        <div class="col">
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
    </div>


    <div class="row mb-2">
        <label class="col-form-label col-md-2">Confirm Password:</label>
        <div class="col-md-4">
            <input asp-for="ConfirmPassword" class="form-control"  />
        </div>

        <div class="col">
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>



    <div class="row mb-2">
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary">Change Password</button>
            <a asp-action="Index" asp-controller="Home" asp-area="" class="btn btn-outline-light">Cancel</a>

        </div>
    </div>



</form>