    </div>
    @* xxxxxxxx CANCEL BUTTON xxxxxxxx *@




    <form asp-action="AddEditIncident" method="post">
        @* All Error Messages *@
        @*     <div asp-validation-summary="All" class="text-danger"></div> *@


        @* TITLE *@
        <div class="add-edit_input_div ">
            <input asp-for="Title" class="add-edit_input   form-control" placeholder="Title" />
            <label asp-for="Title" class="add-edit_input_label">Title</label>
        </div>
        <div class="add-edit_error_div   ">
            <span class="add-edit_error_message" asp-validation-for="Title"></span> @* Error Message *@
        </div>
        @* TITLE *@


        @* DESCRIPTION *@
        <div class="add-edit_input_div">
            <input asp-for="Description" class="add-edit_input   form-control" placeholder="Description" />
            <label asp-for="Description" class="add-edit_input_label">Description</label>
        </div>
        <div class="add-edit_error_div">
            <span class="add-edit_error_message" asp-validation-for="Description"></span> @* Error Message *@
        </div>
        @* DESCRIPTION *@


        @* CUSTOMER SELECTOR *@
        <div class="add-edit_input_div">
            <select asp-for="CustomerModelId" class="add-edit_select_input form-control">
                <option class="add-edit_selction_option   fw-bold" value="">Select Customer</option>
                @foreach (var customer in ViewBag.Customers)
                {
                    <option class="add-edit_selction_option" value="@customer.CustomerModelId">
                        @customer.CustomerFirstName @customer.CustomerLastName
                    </option>
                }
            </select>
            <label asp-for="CustomerModelId" class="add-edit_input_label">Customer</label>
        </div>
        <div class="add-edit_error_div">
            <span class="add-edit_error_message" asp-validation-for="CustomerModelId"></span> @* Error Message *@
        </div>
        @* CUSTOMER SELECTOR *@


        @* PRODUCT SELECTOR *@
        <div class="add-edit_input_div">
            <select asp-for="ProductModelId" class="add-edit_select_input form-control">
                <option class="add-edit_selction_option   fw-bold" value="">Select Product</option>
                @foreach (var products in ViewBag.Products)
                {
                    <option class="add-edit_selction_option" value="@products.ProductModelId">
                        @products.RecordName
                    </option>
                }
            </select>
            <label asp-for="ProductModelId" class="add-edit_input_label">Product</label>
        </div>
        <div class="add-edit_error_div">
            <span class="add-edit_error_message" asp-validation-for="ProductModelId"></span> @* Error Message *@
        </div>
        @* PRODUCT SELECTOR *@


        @* EMPLOYEE SELECTOR *@
        <div class="add-edit_input_div">
            <select asp-for="EmployeeModelId" class="add-edit_select_input form-control">
                <option class="add-edit_selction_option   fw-bold" value="">Select Employee</option>
                @foreach (var employee in ViewBag.Employees)
                {
                    <option class="add-edit_selction_option" value="@employee.EmployeeModelId">
                        @employee.FirstName
                    </option>
                }
            </select>
            <label asp-for="EmployeeModelId" class="add-edit_input_label">Employee</label>
        </div>
        <div class="add-edit_error_div">
            <span class="add-edit_error_message" asp-validation-for="EmployeeModelId"></span> @* Error Message *@
        </div>
        @* EMPLOYEE SELECTOR *@


        @* DATE OPENED *@
        <div class="add-edit_input_div">
            <input asp-for="DateOpened" class="add-edit_input form-control" type="text" placeholder="Date Opened"
                value="@((Model.DateOpened.HasValue ? Model.DateOpened.Value.ToString("MM/dd/yyyy h:mm tt") : DateTime.Now.ToString("MM/dd/yyyy h:mm tt")))" />

            <label asp-for="DateOpened" class="add-edit_input_label">Date Opened</label>
        </div>
        <div class="add-edit_error_div">
            <span class="add-edit_error_message" asp-validation-for="DateOpened"></span> @* Error Message *@
        </div>
        @* DATE OPENED *@


        @* PRICE *@
        <div class="add-edit_input_div">
            <input asp-for="DateClosed" class="add-edit_input    form-control" type="datetime-local" placeholder="Date Closed"
                value="@((Model.DateClosed.HasValue ? Model.DateClosed.Value.ToString("yyyy-MM-ddTHH:mm") : string.Empty))" />

            <label asp-for="DateClosed" class="add-edit_input_label">Date Closed</label>
        </div>
        <div class="add-edit_error_div">
            <span class="add-edit_error_message" asp-validation-for="DateClosed"></span> @* Error Message *@
        </div>
        @* PRICE *@




        @* SAVE BUTTON *@
        <div class="">
            <button type="submit" class="pushable text-center  m-3">
                <span class="btn    pushable">
                    <span class="shadow"></span>
                    <span class="edge"></span>
                    <span class="front  front_save_button_color">
                        Save
                    </span>
                </span>
            </button>
        </div>
        @* SAVE BUTTON *@



        <input type="hidden" asp-for="IncidentModelId" />

    </form>
</div>








