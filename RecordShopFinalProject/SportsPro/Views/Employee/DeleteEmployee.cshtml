@model EmployeeModel



@{
    ViewBag.Title = $"{ViewBag.Action}";
}




<h1 class="my-4">Delete Employee</h1>

<p class="my-4">Do You Really Want To Delete <span class="fw-bold">@Model.FirstName @Model.LastName?</span></p>


<form asp-action="DeleteEmployee" method="post">

    @* This Employee id is being sent back to the controller *@
    <input type="hidden" asp-for="EmployeeModelId" />

    <button type="submit" class="btn btn-dark">Yes</button>
    <a asp-controller="Employee" asp-action="Index" class="btn btn-dark">No</a>

</form>