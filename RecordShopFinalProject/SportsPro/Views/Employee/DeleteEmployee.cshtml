@model EmployeeModel
@{
    ViewBag.Title = $"Delete {@Model.FirstName} {@Model.LastName}";
}



<div class="container  text-center">
    <h1 class="delete_selected_item_header    text_shadow_pop_top">Do You Really Want To Delete</h1>
    <h1 class="delete_selected_item_name      text_shadow_pop_top">@Model.FirstName @Model.LastName</h1>

    <span class="click_record_text">
        Click The Record To Delete Employee!
    </span>



    @* xxxxxxxx CANCEL BUTTON xxxxxxxx *@
