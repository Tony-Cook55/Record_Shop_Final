

@{
    ViewData["Title"] = ViewBag.CustomerFirstName + " " + ViewBag.CustomerLastName + " " + "Registrations" ;
}




@if (ViewBag.CustomerFirstName == null)
{
    <h1 class="text-center pt-3">Please Select a Customer to View Registrations.</h1>
}
else
{
    <h1 class="pt-3">Customer: @ViewBag.CustomerFirstName @ViewBag.CustomerLastName</h1>
    <h1 class="pt-3">Registrations</h1>

    @if (ViewBag.Products == null || ((HashSet<ProductModel>)ViewBag.Products).Count == 0)
    {
        <h2 class="text-center pt-3">No products associated with this customer.</h2>
    }
    else
    {
        <table class="table table-striped table-striped border border-secondary">
            <thead>
                <tr>
                    <th>Record Name</th>
                    <th>Artist Name</th>
                    <th>Release Date</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in (HashSet<ProductModel>)ViewBag.Products)
                {
                    <tr>
                        <td>@product.RecordName</td>
                        <td>@product.ArtistName</td>
                        <td>@product.ReleaseDate</td>
                        <td>@product.Price</td>
                    </tr>
                }
            </tbody>
        </table>
    }
}


<h1 class="mt-3">Register New Product</h1>
<form asp-action="AddProduct" asp-controller="Registration" method="post">
    <div class="form-group">
        <label for="productId">Select Product:</label>
        <select class="form-control" name="productId" id="productId">
            <option value="">Select Product</option>
            @foreach (var product in ViewBag.AllProducts)
            {
                <option value="@product.ProductModelId">@product.RecordName by @product.ArtistName</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Register</button>
</form>